{
  "name": "markdan",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@6.35.1",
  "description": "",
  "keywords": [
    "markdan",
    "markdown",
    "editor",
    "wysiwyg"
  ],
  "homepage": "https://github.com/markdanjs/markdan#readme",
  "bugs": {
    "url": "https://github.com/markdanjs/markdan/issues"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:markdanjs/markdan.git"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./*": "./dist/*"
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "node scripts/dev.js",
    "build": "rimraf dist && esno ./scripts/build.ts",
    "lint": "eslint . --fix",
    "prepublishOnly": "nr build",
    "release": "bumpp --commit --push --tag && npm publish",
    "start": "esno src/index.ts",
    "dev:template": "run-p \"dev markdan core template-explorer\" \"serve\" open",
    "open": "open http://localhost:3000/packages/template-explorer/",
    "serve": "serve",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.18.9",
    "@antfu/ni": "^0.13.2",
    "@babel/types": "^7.17.0",
    "@changesets/cli": "^2.22.0",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/node": "^17.0.23",
    "bumpp": "^7.1.1",
    "cz-customizable": "^6.3.0",
    "esbuild": "^0.20.2",
    "eslint": "^8.11.0",
    "esno": "^0.14.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "minimist": "^1.2.7",
    "npm-run-all": "^4.1.5",
    "npm-run-all2": "^6.1.2",
    "rimraf": "^3.0.2",
    "serve": "^14.1.2",
    "tsup": "^5.12.1",
    "typescript": "^4.6.2",
    "vite": "^2.8.6",
    "vitest": "^0.7.10",
    "zx": "^6.0.7"
  },
  "lint-staged": {
    "*.{ts?(x)}": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  }
}
