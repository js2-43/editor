{
  "name": "markdan",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.0.6",
  "description": "",
  "keywords": [
    "markdan",
    "markdown",
    "editor",
    "wysiwyg"
  ],
  "homepage": "https://github.com/markdanjs/markdan#readme",
  "bugs": {
    "url": "https://github.com/markdanjs/markdan/issues"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:markdanjs/markdan.git"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./*": "./dist/*"
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "lint": "eslint . --fix",
    "dev:lib": "node scripts/build.js core editor engine helper -f esm -m dev",
    "start:lib": "pnpm --filter @markdan/template-explorer run dev",
    "dev": "run-p dev:lib start:lib",
    "build:lib": "node scripts/build.js markdan -f esm",
    "emit-typed": "tsc ./packages/markdan/src/index.ts --declaration --emitDeclarationOnly --outDir ./packages/markdan/dist",
    "build": "run-p build:lib emit-typed",
    "prepublishOnly": "npm run build",
    "release": "bumpp --commit --push --tag && pnpm publish",
    "rm-rf": "rimraf dist",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.18.9",
    "@changesets/cli": "^2.22.0",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/node": "^17.0.23",
    "bumpp": "^7.1.1",
    "cz-customizable": "^6.3.0",
    "esbuild": "^0.20.2",
    "eslint": "^8.11.0",
    "esno": "^0.14.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "minimist": "^1.2.7",
    "npm-run-all2": "^6.1.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.2",
    "vitest": "^0.7.10"
  },
  "lint-staged": {
    "*.{ts?(x)}": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  }
}
